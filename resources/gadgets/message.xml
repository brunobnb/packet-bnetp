<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="Message" />
	<UserPref name="message" required="true" />
	<UserPref name="class" default_value="noteimportant" />
	<Content type="html">
		<![CDATA[
			<style type="text/css">
				/* @import url("someurl.css"); */
				.noteclassic,.noteimportant,.notewarning,.notetip{
					margin:2em;
					margin-left:auto;
					margin-right:auto;
					/* width:70% !important; */
					min-height:40px;
					clear:both;
					text-align:justify;
					vertical-align:middle;
					border-collapse:collapse;
					padding:15px 20px 15px 80px;
					background-position:20px 50%;
					background-repeat:no-repeat;
					-moz-border-radius:20px;
					-khtml-border-radius:20px;
					border-radius:20px;
				}
				.noteclassic{border:1px solid #99D;
					background-color:#eef;
					background-image:url(http://packet-bnetp.googlecode.com/svn/resources/images/note.png);
				}
				.noteimportant{border:1px solid #ff0;
					background-color:#ffc;
					background-image:url(http://packet-bnetp.googlecode.com/svn/resources/images/important.png);
				}
				.notewarning{border:1px solid #d99;
					background-color:#fdd;
					background-image:url(http://packet-bnetp.googlecode.com/svn/resources/images/warning.png);
				}
				.notetip{border:1px solid #9d9;
					background-color:#dfd;
					background-image:url(http://packet-bnetp.googlecode.com/svn/resources/images/tip.png);
				}
			</style>
			<div class="message __UP_class__">
				<div class="image"></div>
				<div class="text">
					__UP_message__	
				</div>
			</div>
		]]>
	</Content>
</Module>
